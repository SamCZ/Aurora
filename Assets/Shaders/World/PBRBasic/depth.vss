#include "../../vs_common.h"
#include "../instancing.h"

out vec2 TexCoord;
out vec4 WorldPos;

layout(location = 0) in vec3 POSITION;
layout(location = 1) in vec2 TEXCOORD_0;

out gl_PerVertex
{
	vec4 gl_Position;
};

void main() {
	WorldPos = INST_TRANSFORM * vec4(POSITION, 1.0);
	gl_Position = ProjectionViewMatrix * WorldPos;
	TexCoord = TEXCOORD_0;
}