#include "../../vs_common.h"
#include "../instancing.h"

out vec2 TexCoord;

layout(location = 0) in vec3 POSITION;
layout(location = 1) in vec2 TEXCOORD_0;

out gl_PerVertex
{
	vec4 gl_Position;
};

void main() {
	gl_Position = ProjectionViewMatrix * gInstances[gl_InstanceID].ModelMatrix * vec4(POSITION, 1.0);
	TexCoord = TEXCOORD_0;
}